# EditorConfig file to my-make-things project. This configures certain editor
# settings so everything looks consistent.

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[*.{c,h,cpp,hpp}]
indent_size = 4

[*.yml]
indent_size = 2
